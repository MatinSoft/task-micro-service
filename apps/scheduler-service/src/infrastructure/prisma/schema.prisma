generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows", "darwin-arm64"]
  output        = "../generated/schedule-service"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_SCHEDULE")
}

enum Schedule_status_enum {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  FAILED
}

model Schedule {
  id        String               @id @default(uuid())
  taskId    String
  runAt     DateTime
  status    Schedule_status_enum
  retries   Int                  @default(0)
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt
}

model JobLog {
  id         String   @id @default(uuid())
  scheduleId String
  executedAt DateTime
  output     String
  success    Boolean
}
