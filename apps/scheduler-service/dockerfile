# ============================
# 1️⃣  Base build stage
# ============================
FROM node:20-alpine AS builder

WORKDIR /usr/src/app

# Copy package files
COPY package*.json ./

COPY libs ./libs

# Install all dependencies for build
RUN RUN yarn 

# Copy source code and environment files
COPY . .
COPY tsconfig.json nest-cli.json ./
# Copy Prisma or infrastructure-level .env
COPY ./src/infrastructure/prisma/.env ./src/infrastructure/prisma/.env

# Build NestJS app
RUN npm run build

# ============================
# 2️⃣  Production stage
# ============================
FROM node:20-alpine AS production

WORKDIR /usr/src/app

# Copy built code and essential files from builder
COPY --from=builder /usr/src/app/dist ./dist
COPY --from=builder /usr/src/app/package*.json ./
COPY --from=builder /usr/src/app/src/infrastructure/prisma/.env ./src/infrastructure/prisma/.env

# Install only production dependencies
RUN npm ci --omit=dev

# Copy root .env (runtime configuration)
COPY .env .env

# Expose service port
EXPOSE ${PORT}

# Default command (start NestJS)
CMD ["node", "dist/main"]
