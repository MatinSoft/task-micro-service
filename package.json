{
  "name": "task-mircro-service",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/task-mircro-service/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "run:task-service": "npm run start:dev task-service",
    "run:scheduler-service": "npm run start:dev scheduler-service",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/task-mircro-service/test/jest-e2e.json",
    "build task-service:db": "npx prisma migrate reset && npx prisma migrate dev --schema=./apps/task-service/src/infrastructure/prisma/schema.prisma",
    "sync task-service:db": "npx prisma generate --schema=./apps/task-service/src/infrastructure/prisma/schema.prisma",
    "build schedule-service:db": "npx prisma migrate reset && npx prisma migrate dev --create-only --schema=./apps/scheduler-service/src/infrastructure/prisma/schema.prisma",
    "sync schedule-service:db": "npx prisma generate --schema=./apps/scheduler-service/src/infrastructure/prisma/schema.prisma",
    "start:all": "concurrently -n tasks,scheduler -c blue,green \"npm run run:task-service\" \"npm run run:scheduler-service\""
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/microservices": "^11.1.8",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.18.0",
    "dotenv": "^17.2.3",
    "kafkajs": "^2.2.4",
    "multer": "^2.0.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/platform-socket.io": "^11.1.8",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/swagger": "^11.2.1",
    "@nestjs/testing": "^11.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.8",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "pg": "^8.16.3",
    "prettier": "^3.4.2",
    "prisma": "^6.18.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.27",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^lib/shared-socket(|/.*)$": "<rootDir>/libs/shared-socket/src/$1"
    }
  }
}
